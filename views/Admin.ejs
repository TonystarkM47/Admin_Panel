<!DOCTYPE HTML>
<html>
<head>
    <title>Admin Form</title>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <link href="css/bootstrap.css" rel='stylesheet' type='text/css' />
    <link href="css/style.css" rel='stylesheet' type='text/css' />
    <link href="css/font-awesome.css" rel="stylesheet"> 
    <link href='css/SidebarNav.min.css' media='all' rel='stylesheet' type='text/css'/>
    <link href="css/custom.css" rel="stylesheet">
    <script src="js/jquery-1.11.1.min.js"></script>
    <script src="js/modernizr.custom.js"></script>
    <script src="js/metisMenu.min.js"></script>
    <script src="js/custom.js"></script>
    <script src="js/bootstrap.js"></script>
    <script src='js/SidebarNav.min.js' type='text/javascript'></script>
    <script>
        $(document).ready(function() {
            $('.sidebar-menu').SidebarNav();
        });
    </script>
    <style>
        .form-container {
            text-align: center;
            background: white;
            padding: 40px 20px;
            border-radius: 10px;
            box-shadow: 0px 4px 8px rgba(0, 0, 0, 0.2);
            width: 400px;
            margin: auto;
            transition: 0.3s ease;
        }
        .form-container:hover {
            transform: scale(1.05);
            box-shadow: 0px 6px 12px rgba(255, 0, 0, 0.5);
            background-color: #ffe6e6;
        }
        .form-image {
            width: 100px;
            height: 100px;
            border-radius: 50%;
            object-fit: cover;
            border: 3px solid white;
            box-shadow: 0px 4px 8px rgba(0, 0, 0, 0.2);
            margin-bottom: 15px;
        }
        input[type="text"], input[type="email"], input[type="password"] {
            width: 100%;
            padding: 10px;
            margin: 8px 0;
            border: 1px solid #ccc;
            border-radius: 5px;
        }
        input[type="submit"] {
            background-color: #ff0000;
            color: white;
            border: none;
            padding: 10px;
            width: 100%;
            border-radius: 5px;
            cursor: pointer;
            transition: 0.3s ease;
        }
        input[type="submit"]:hover {
            background-color: #cc0000;
            transform: scale(1.05);
            letter-spacing: 1px;
            box-shadow: 0px 4px 8px rgba(255, 0, 0, 0.5);
        }
    </style>
</head>
<body class="cbp-spmenu-push">
    <div class="main-content">
        <div class="cbp-spmenu cbp-spmenu-vertical cbp-spmenu-left" id="cbp-spmenu-s1">
            <%- include('sidebar') %>
        </div>
        <%- include('headermenu') %>
        <div id="page-wrapper">
            <div class="main-page">
                <div class="forms">
                    <div class="form-container">
                        <img src="https://static.vecteezy.com/system/resources/thumbnails/006/487/917/small_2x/man-avatar-icon-free-vector.jpg" alt="Admin Image" class="form-image">
                        <form method="post">
                            <label>Admin_Id:</label>
                            <input type="text" name="txt1" required />
                            <label>Admin_Name:</label>
                            <input type="text" name="txt2" required />
                            <label>Admin_Email:</label>
                            <input type="email" name="txt3" required />
                            <label>Admin_Password:</label>
                            <input type="password" name="txt4" required />
                            <input type="submit" value="Submit" />
                        </form>
                    </div>
                </div>
            </div>
        </div>
        <%- include('footer') %>
    </div>
</body>
</html>